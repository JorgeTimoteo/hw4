<h1><%= @place["name"] %></h1>

<p>
  <a class="btn btn-dark" href="/posts/new?place_id=<%= @place["id"] %>" role="button">New Post</a>
</p>

<% for post in @posts %>
  <h3><%= post["title"] %></h3>
  <h4><%= post["posted_on"] %></h4>
  <p><%= post["description"] %></p>
<% end %>

<p>
  <a class="btn btn-secondary" href="/places" role="button">Back to All Places</a>
</p>