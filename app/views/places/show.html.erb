<h1><%= @place["name"] %></h1>

<p>
  <a class="btn btn-dark my-3" href="/posts/new?place_id=<%= @place["id"] %>" role="button">New Post</a>
</p>

  <div class="row">
    <% for post in @posts %>
    <div class="col-sm-4">
      <h3><%= post["title"] %></h3>
      <h4><%= post["posted_on"] %></h4>
      <% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
      <% end %>
      <p><%= post["description"] %></p>
    </div>
    <% end %>
   </div>

<p>
  <a class="btn btn-secondary" href="/places" role="button">Back to All Places</a>
</p>